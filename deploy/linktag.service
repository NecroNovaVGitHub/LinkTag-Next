[Unit]
Description=linktag

[Service]
ExecStart=node ./node_modules/.bin/next start -p 20010
Restart=always
User=linktag
Group=linktag
Environment=NODE_ENV=production
# Following line is optional, but needed when linktag is a system user
# w/o a home directory
Environment=DOTNET_BUNDLE_EXTRACT_BASE_DIR=/tmp/sharpii
WorkingDirectory=/srv/http/linktag.example.com/linktag
StandardOutput=append:/var/log/node/linktag/common.log
StandardError=inherit

[Install]
WantedBy=multi-user.target
